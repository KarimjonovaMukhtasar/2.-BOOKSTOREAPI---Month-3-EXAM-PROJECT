<style>
    .form-container {
        max-width: 700px;
        margin: 40px auto;
        padding: 25px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 8px 16px rgba(0,0,0,0.1);
    }
    .form-container h2 {
        text-align: center;
        color: #3f51b5;
        margin-bottom: 20px;
    }
    .form-container p.message { text-align: center; color: green; font-weight: bold; }
    .form-container p.error { text-align: center; color: red; font-weight: bold; }
    .form-container form { display: flex; flex-direction: column; gap: 15px; }
    .form-container input,
    .form-container select {
        padding: 12px;
        font-size: 1em;
        border: 1px solid #ccc;
        border-radius: 5px;
    }
    .form-container button {
        padding: 12px;
        background-color: #3f51b5;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.2s ease;
    }
    .form-container button:hover { background-color: #303f9f; }
</style>

<div class="form-container">
    <h2><%= title %></h2>

    <% if (message) { %><p class="message"><%= message %></p><% } %>
    <% if (errors && errors.length > 0) { %>
        <% errors.forEach(function(err) { %><p class="error"><%= err.message %></p><% }) %>
    <% } %>

    <form action="<%= data ? '/users/' + data.id + '/edit' : '/users/new' %>" method="POST">
        <input type="email" name="email" placeholder="Email" value="<%= data ? data.email : '' %>" required>
        <input type="text" name="username" placeholder="Username" value="<%= data ? data.username : '' %>" required>
        <input type="password" name="password" placeholder="<%= data ? 'PASSWORD IS HIDDEN NOW!' : 'Password' %>" <%= data ? '' : 'required' %> >
        <input type="text" name="first_name" placeholder="First Name" value="<%= data ? data.first_name : '' %>" required>
        <input type="text" name="last_name" placeholder="Last Name" value="<%= data ? data.last_name : '' %>" required>
        <input type="text" name="phone_number" placeholder="Phone Number" value="<%= data ? data.phone_number : '' %>" required>
        <input type="text" name="address" placeholder="Address" value="<%= data ? data.address : '' %>" required>
        <select name="role" required>
            <option value="user" <%= data && data.role === 'user' ? 'selected' : '' %>>User</option>
            <option value="admin" <%= data && data.role === 'admin' ? 'selected' : '' %>>Admin</option>
            <option value="superadmin" <%= data && data.role === 'superadmin' ? 'selected' : '' %>>Superadmin</option>
        </select>
        <select name="status" required>
            <option value="active" <%= data && data.status === 'active' ? 'selected' : '' %>>Active</option>
            <option value="inactive" <%= data && data.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
        </select>
        <button type="submit"><%= data ? 'Update User' : 'Create User' %></button>
    </form>
</div>
