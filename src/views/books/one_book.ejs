<% layout('layouts/main', { title: book.title }) %>

<h2><%= book.title %></h2>
<p>Author: <%= book.authorName %></p>
<p>Genre: <%= book.genreName %></p>
<p>Price: $<%= book.price %></p>
<p>Stock: <%= book.stock %></p>
<p>Status: <%= book.status %></p>
<p>Published: <%= book.published_date.toDateString() %></p>
<p>Description: <%= book.description %></p>

<% if (book.imageUrls && book.imageUrls.length) { %>
    <div>
        <% book.imageUrls.forEach(url => { %>
            <img src="<%= url %>" alt="<%= book.title %>" width="150">
        <% }) %>
    </div>
<% } %>

<a href="/books/<%= book.id %>/edit">Edit Book</a>
<a href="/books">Back to Books</a>
