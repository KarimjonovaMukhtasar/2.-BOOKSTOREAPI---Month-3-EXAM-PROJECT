<!-- views/books/one_book.ejs -->
<style>
    /* Scoped styles for one_book.ejs */
    .one-book-detail-container {
        padding: 20px;
        background-color: white;
        border-radius: 8px;
    }

    .one-book-detail-container h2 {
        color: #3f51b5;
        margin-bottom: 10px;
        text-align: center;
        font-size: 2em;
    }

    .one-book-detail-container p.subtitle {
        text-align: center;
        color: #666;
        margin-bottom: 30px;
        font-size: 1.1em;
    }

    .book-detail-card {
        display: flex;
        gap: 40px;
        margin-top: 30px;
        align-items: flex-start;
    }

    .book-detail-image-container {
        flex-shrink: 0;
        width: 300px; /* Fixed width for the image */
    }

    .book-detail-image {
        width: 100%;
        height: auto;
        border-radius: 10px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
    }

    .book-detail-info {
        flex-grow: 1;
    }

    .book-detail-info h2 {
        margin-top: 0;
        color: #3f51b5;
        font-size: 2.2em;
        text-align: left;
        margin-bottom: 15px;
    }

    .book-detail-info p {
        margin-bottom: 12px;
        line-height: 1.7;
        color: #444;
        font-size: 1.05em;
        text-align: left;
    }

    .book-detail-info strong {
        color: #333;
        font-weight: 600;
    }

    .book-detail-actions {
        margin-top: 40px;
        display: flex;
        gap: 15px;
        justify-content: flex-start;
    }

    .btn {
        padding: 12px 25px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1em;
        font-weight: 600;
        transition: background-color 0.2s ease, transform 0.1s ease;
    }

    .btn-edit {
        background-color: #28a745;
        color: white;
    }
    .btn-edit:hover {
        background-color: #218838;
        transform: translateY(-1px);
    }

    .btn-delete {
        background-color: #dc3545;
        color: white;
    }
    .btn-delete:hover {
        background-color: #c82333;
        transform: translateY(-1px);
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }
    .btn-secondary:hover {
        background-color: #5a6268;
        transform: translateY(-1px);
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .book-detail-card {
            flex-direction: column;
            align-items: center;
            gap: 20px;
        }
        .book-detail-image-container {
            width: 80%;
        }
        .book-detail-info h2, .book-detail-info p {
            text-align: center;
        }
        .book-detail-actions {
            flex-direction: column;
            align-items: center;
            gap: 10px;
        }
        .book-detail-actions .btn {
            width: 100%;
            max-width: 250px;
        }
    }
</style>

<div class="one-book-detail-container">
    <h2>Book Details</h2>
    <p class="subtitle">Dive deep into the information about this book.</p>

    <div class="book-detail-card">
        <div class="book-detail-image-container">
            <img src="<%= book.image || 'https://via.placeholder.com/300x400/cccccc/ffffff?text=Book+Cover' %>" alt="Book Cover" class="book-detail-image">
        </div>
        <div class="book-detail-info">
            <h2><%= book.title %></h2>
            <p><strong>Author:</strong> <%= book.author_id %></p>
            <p><strong>Genre:</strong> <%= book.genre_id %></p>
            <p><strong>Price:</strong> $<%= book.price %></p>
            <p><strong>Stock:</strong> <%= book.stock %> in stock</p>
            <p><strong>Published Date:</strong> <%= book.published_date %></p>
            <p><strong>Status:</strong> <%= book.status %></p>
            <p><strong>Description:</strong> <%= book.description %></p>

            <div class="book-detail-actions">
                <button class="btn btn-edit" onclick="location.href='/books/<%= book.id %>/edit'">Edit Book</button>
                
                <form action="/books/<%= book.id %>/delete" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this book?');">Delete Book</button>
                </form>

                <button class="btn btn-secondary" onclick="window.history.back()">Back to All Books</button>
            </div>
        </div>
    </div>
</div>
