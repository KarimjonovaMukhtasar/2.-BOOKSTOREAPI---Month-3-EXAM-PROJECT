<!-- views/books/show_books.ejs -->
<style>
    /* Scoped styles for show_books.ejs */
    .all-books-container {
        padding: 20px;
        background-color: white;
        border-radius: 8px;
    }

    .all-books-container h2 {
        color: #3f51b5;
        margin-bottom: 10px;
        text-align: center;
        font-size: 2em;
    }

    .all-books-container p {
        text-align: center;
        color: #666;
        margin-bottom: 30px;
        font-size: 1.1em;
    }

    .search-bar-container {
        display: flex;
        gap: 15px;
        margin-bottom: 30px;
        align-items: center;
    }

    .search-bar-container input {
        flex-grow: 1;
        padding: 12px 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 1em;
        box-shadow: inset 0 1px 3px rgba(0,0,0,0.05);
    }
    .search-bar-container input:focus {
        border-color: #3f51b5;
        box-shadow: 0 0 0 3px rgba(63, 81, 181, 0.2);
        outline: none;
    }

    .btn {
        padding: 12px 25px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1em;
        font-weight: 600;
        transition: background-color 0.2s ease, transform 0.1s ease;
    }

    .btn-new {
        background-color: #007bff; /* Bootstrap-like blue */
        color: white;
        white-space: nowrap;
        padding: 12px 20px;
    }
    .btn-new:hover {
        background-color: #0056b3;
        transform: translateY(-1px);
    }

    .book-card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 25px;
        margin-top: 30px;
    }

    .book-card {
        background-color: #fff;
        border: 1px solid #eee;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
        display: flex;
        flex-direction: column;
        overflow: hidden;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .book-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }

    .book-card-image {
        width: 100%;
        height: 220px;
        object-fit: cover;
        border-bottom: 1px solid #eee;
    }

    .book-card-content {
        padding: 20px;
        flex-grow: 1;
    }

    .book-card-content h3 {
        margin-top: 0;
        margin-bottom: 12px;
        color: #3f51b5;
        font-size: 1.3em;
        text-align: left;
        font-weight: 600;
    }

    .book-card-content p {
        margin-bottom: 8px;
        font-size: 0.95em;
        color: #555;
        text-align: left;
    }
    .book-card-content p strong {
        color: #333;
    }

    .book-card-actions {
        display: flex;
        justify-content: space-between;
        padding: 15px 20px;
        border-top: 1px solid #eee;
        gap: 10px;
    }

    .book-card-actions .btn {
        flex: 1;
        margin: 0;
        font-size: 0.9em;
        padding: 10px 15px;
    }

    .btn-edit {
        background-color: #28a745; /* Green */
        color: white;
    }
    .btn-edit:hover {
        background-color: #218838;
        transform: translateY(-1px);
    }

    .btn-delete {
        background-color: #dc3545; /* Red */
        color: white;
    }
    .btn-delete:hover {
        background-color: #c82333;
        transform: translateY(-1px);
    }

    .pagination {
        display: flex;
        justify-content: center;
        gap: 8px;
        margin-top: 40px;
    }

    .pagination button {
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        padding: 10px 18px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.2s ease, transform 0.1s ease;
        font-size: 0.95em;
        color: #555;
    }

    .pagination button:hover {
        background-color: #e2e6ea;
        transform: translateY(-1px);
    }

    .pagination button.active {
        background-color: #3f51b5;
        color: white;
        border-color: #3f51b5;
        font-weight: bold;
    }

    @media (max-width: 768px) {
        .search-bar-container {
            flex-direction: column;
            gap: 10px;
        }
        .search-bar-container input, .btn-new {
            width: 100%;
        }
        .book-card-grid {
            grid-template-columns: 1fr;
        }
        .book-card-actions {
            flex-direction: column;
            gap: 8px;
        }
        .book-card-actions .btn {
            width: 100%;
        }
    }
</style>

<div class="all-books-container">
    <h2>All Books</h2>
    <p>Browse the entire collection with ease.</p>

    <div class="search-bar-container">
        <input type="text" placeholder="Search by title, author, or genre" id="searchInput">
        <button class="btn btn-new" onclick="location.href='/books/new'">New Book</button>
    </div>

    <div class="book-card-grid">
        <% if (books && books.length > 0) { %>
            <% books.forEach(function(book) { %>
                <div class="book-card">
                    <img src="<%= book.image || 'https://via.placeholder.com/280x220/cccccc/ffffff?text=No+Cover' %>" 
                         alt="<%= book.title %> Cover" class="book-card-image">
                    <div class="book-card-content">
                        <h3><%= book.title %></h3>
                        <p><strong>Author:</strong> <%= book.author_id %></p>
                        <p><strong>Genre:</strong> <%= book.genre_id %></p>
                        <p><strong>Price:</strong> $<%= book.price  %></p>
                        <p><strong>Stock:</strong> <%= book.stock %> in stock</p>
                    </div>
                    <div class="book-card-actions">
                        <button class="btn btn-edit" onclick="location.href='/books/<%= book.id %>/edit'">Edit</button>
                        <form action="/books/<%= book.id %>/delete" method="POST" style="flex:1; margin:0;">
                            <button type="submit" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this book?');">Delete</button>
                        </form>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p style="text-align: center; grid-column: 1 / -1; color: #888;">No books found. Why not add one?</p>
        <% } %>
    </div>

    <div class="pagination">
        <% if (pagination) { %>
            <% if (pagination.prevPage) { %>
                <button onclick="location.href='?page=<%= pagination.prevPage %>'">Previous</button>
            <% } %>
            <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                <button class="<%= i === pagination.currentPage ? 'active' : '' %>" onclick="location.href='?page=<%= i %>'"><%= i %></button>
            <% } %>
            <% if (pagination.nextPage) { %>
                <button onclick="location.href='?page=<%= pagination.nextPage %>'">Next</button>
            <% } %>
        <% } %>
    </div>
</div>
