<% layout('layouts/main', { title: 'My Orders' }) %>

<h2>My Orders</h2>
<ul>
    <% orders.forEach(order => { %>
        <li>
            Order #<%= order.id %> - Total: $<%= order.totalPrice %> - Status: <%= order.status %>
            <a href="/orders/<%= order.id %>">View</a>
        </li>
    <% }) %>
</ul>
