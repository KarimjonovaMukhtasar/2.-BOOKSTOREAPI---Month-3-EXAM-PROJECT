<h2>My Orders</h2>

<div style="text-align: right; margin-bottom: 15px;">
    <a href="/orders/new"
       style="
            background-color:#4caf50;
            padding:10px 18px;
            color:white;
            text-decoration:none;
            border-radius:6px;
            font-weight:bold;
        ">
        + Create New Order
    </a>
</div>

<ul>
    <% orders.forEach(order => { %>
        <li>
            Order #<%= order.id %> – Total: $<%= order.total_price %> – Status: <%= order.status %>
            <a href="/orders/<%= order.id %>">View</a>
        </li>
    <% }) %>
</ul>
